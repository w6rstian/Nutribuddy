<UserControl x:Class="Nutribuddy.UI.WPF.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Nutribuddy.UI.WPF.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}">

    <UserControl.DataContext>
        <vm:HomeVM />
    </UserControl.DataContext>
    
    <StackPanel>
        <TextBlock Text="Welcome"
                   Style="{StaticResource Text_Style}"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20" />
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,10">
            <Border Width="400"
                    Height="200">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#5bc3ff" Offset="0.0" />
                        <GradientStop Color="#3aa0ff" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,400,200" />
                </Border.Clip>

                <Button Command="{Binding ProfileCommand}"
                        Background="Transparent"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Grid Width="400" Height="200">
                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock Text="Profile"
                                       Style="{StaticResource Text_Style}"
                                       Foreground="White"
                                       FontSize="28"
                                       Margin="20,10,10,0"/>
                            <TextBlock Text="Check your details and nutrient intake"
                                       Style="{StaticResource Text_Style}"
                                       Foreground="White"
                                       FontSize="18"
                                       Margin="20,10,10,0"/>
                        </StackPanel>

                        <Image Width="150"
                               Height="150"
                               Source="/Assets/Images/blankuser.png"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom" 
                               Margin="0,0,-33,-28"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-11.752"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </Button>
            </Border>

            <Border Width="200"
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#ffc554" Offset="0.0" />
                        <GradientStop Color="#ffb73a" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10"
                                       RadiusY="10"
                                       Rect="0,0,200,200" />
                </Border.Clip>

                <Button Command="{Binding MealsCommand}"
                        Background="Transparent"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Grid Width="200" Height="200">
                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <TextBlock Text="Meals"
                                           Style="{StaticResource Text_Style}"
                                           Foreground="White"
                                           FontSize="28"
                                           Margin="20,10,10,0"/>

                            <TextBlock Text="Tell us what you eat"
                                           Style="{StaticResource Text_Style}"
                                           Foreground="White"
                                           FontSize="17"
                                           Margin="20,10,10,0"/>
                        </StackPanel>

                        <Image Width="100"
                                   Height="100"
                                   Source="/Assets/Images/food-tray.png"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom" Margin="0,0,-5,-4" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-11.752"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </Button>
            </Border>
        </StackPanel>

        <StackPanel>

            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0" />

                </Style>
            </StackPanel.Resources>
            
            <TextBlock Text="Navigate"
                       Style="{StaticResource Text_Style}"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal">

                <Border Width="150"
                        Height="150"
                        Background="#844eff"
                        CornerRadius="10"
                        Margin="0">
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                           RadiusY="10"
                                           Rect="0,0,150,150" />
                    </Border.Clip>
                    <Button Command="{Binding DishesCommand}"
                            Background="Transparent"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Grid Width="150" Height="150">
                            <TextBlock Text="Dishes"
                                   Style="{StaticResource Text_Style}"
                                   VerticalAlignment="Top"
                                   Foreground="White"
                                   FontSize="20"
                                   Margin="20,10,10,0"/>
                        </Grid>
                    </Button>
                </Border>

                <Border Width="150"
                        Height="150"
                        Background="#4e99ff"
                        CornerRadius="10">
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                           RadiusY="10"
                                           Rect="0,0,150,150" />
                    </Border.Clip>
                    <Button Command="{Binding ProductsCommand}"
                            Background="Transparent"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Grid Width="150" Height="150">
                            <TextBlock Text="Products"
                                   Style="{StaticResource Text_Style}"
                                   VerticalAlignment="Top"
                                   Foreground="White"
                                   FontSize="20"
                                   Margin="20,10,10,0"/>
                        </Grid>
                    </Button>
                </Border>

                <Border Width="150"
                        Height="150"
                        Background="#CDB4DB"
                        CornerRadius="10">
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                           RadiusY="10"
                                           Rect="0,0,150,150" />
                    </Border.Clip>
                    <Button Command="{Binding CalendarCommand}"
                            Background="Transparent"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Grid Width="150" Height="150">
                            <TextBlock Text="Calendar"
                                   Style="{StaticResource Text_Style}"
                                   VerticalAlignment="Top"
                                   Foreground="White"
                                   FontSize="20"
                                   Margin="20,10,10,0"/>
                        </Grid>
                    </Button>
                </Border>

                <Border Width="150"
                        Height="150"
                        Background="#FFAFCC"
                        CornerRadius="10">
                    <Border.Clip>
                        <RectangleGeometry RadiusX="10"
                                           RadiusY="10"
                                           Rect="0,0,150,150" />
                    </Border.Clip>
                    <Button Command="{Binding SettingsCommand}"
                            Background="Transparent"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Grid Width="150" Height="150">
                            <TextBlock Text="Settings"
                                   Style="{StaticResource Text_Style}"
                                   VerticalAlignment="Top"
                                   Foreground="White"
                                   FontSize="20"
                                   Margin="20,10,10,0"/>
                        </Grid>
                    </Button>
                </Border>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
